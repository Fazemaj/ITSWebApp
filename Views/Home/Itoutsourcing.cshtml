  }

  .card-front {
    transform: rotateY(0deg);
  }

  .card-back {
    transform: rotateY(180deg);
  }

  .strategy:hover .card-front {
    transform: rotateY(-180deg);
  }

  .strategy:hover .card-back {
    transform: rotateY(0deg);
  }

  .box-img {
    display: flex;
    align-items: center;
    gap: 20px;
