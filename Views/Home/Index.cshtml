<script>
    function hoverCard(card) {
        if (window.innerWidth >= 768) {
            var cards = document.querySelectorAll('.card');
            cards.forEach(function (element) {
                if (element !== card) {
                    element.classList.add('blur');
                } else {
                    element.classList.remove('blur');
                }
            });
        }
    }

    function clearHover() {
        if (window.innerWidth >= 768) {
            var cards = document.querySelectorAll('.card');
            cards.forEach(function (element) {
                element.classList.remove('blur');
            });
        }
    }
</script>


